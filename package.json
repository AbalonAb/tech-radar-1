{
  "name": "tech-radar",
  "version": "0.0.1",
  "description": "Generator for Extenda Retail Technology Radar",
  "main": "index.js",
  "config": {
    "radar": {
      "edition": 2,
      "docker": "414891016442.dkr.ecr.eu-west-1.amazonaws.com/extenda/tech-radar:latest"
    }
  },
  "scripts": {
    "build": "EDITION=$npm_package_config_radar_edition node bin/build.js --build",
    "start": "EDITION=$npm_package_config_radar_edition node index.js",
    "docker:build": "docker build --squash -t $npm_package_config_radar_docker .",
    "preedition:next": "git tag -a -m 'Tech Radar Edition $npm_package_config_radar_edition' radar-edition-$npm_package_config_radar_edition",
    "edition:next": "node bin/edition.js --next",
    "postedition:next": "git add package.json && git commit -m 'Prepare next radar edition'",
    "prerelease": "npm run build && git add archive && git commit -m 'Archive edition $npm_package_config_radar_edition'",
    "release": "npm run build:archive && npm edition:next && npm run docker:build",
    "postrelease": "docker push $npm_package_config_radar_docker && git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:extenda/tech-radar.git"
  },
  "author": "Samuel Sjoberg",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/extenda/tech-radar/issues"
  },
  "homepage": "https://github.com/extenda/tech-radar#readme",
  "devDependencies": {
    "fs-extra": "^7.0.1",
    "handlebars": "^4.0.12",
    "klaw-sync": "^6.0.0",
    "live-server": "^1.2.0",
    "markdown-it": "^8.4.2",
    "util": "^0.11.1",
    "watch": "^1.0.2",
    "yaml": "^1.0.2"
  }
}
